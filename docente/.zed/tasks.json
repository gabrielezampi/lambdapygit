[
  {
    "label": "Compile $ZED_FILE",
    "command": "typst",
    "args": [ "c", "--root", "$ZED_WORKTREE_ROOT", "$ZED_FILE" ],
    "allow_concurrent_runs": false
  },
  {
    "label": "Watch $ZED_FILE",
    "command": "typst",
    "args": [ "w", "--root", "$ZED_WORKTREE_ROOT", "$ZED_FILE" ],
    "allow_concurrent_runs": false
  }
]
